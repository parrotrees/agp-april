<div class="index-section {{ section_class }} container py-5 text-center">
  <div class="page-width{% if block.settings.narrow_column %} page-width--narrow{% endif %} text-{{ block.settings.align_text }}">
    {%- if block.settings.title != blank -%}
      <h2 class="h2">
        {{ block.settings.title | escape }}
      </h2>
    {%- endif -%}
    {%- if block.settings.text != blank -%}
      <div class="rte">
        {%- if block.settings.enlarge_text %}<div class="enlarge-text">{% endif -%}
          {{ block.settings.text }}
        {%- if block.settings.enlarge_text %}</div>{% endif -%}
      </div>
    {%- endif -%}
  </div>
</div>
